<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Favourites - Filebase</title>
    <link rel="stylesheet" href="../styles/home.css" />
    <link rel="stylesheet" href="../styles/modal.css" />
    <link rel="icon" type="image/png" href="assets/images/favicon.png"/>
    <script
      type="module"
      src="/modules/ui/favourites.js"
      defer
    ></script>
    <script
      type="module"
      src="/modules/services/download.js"
      defer
    ></script>
    <script
      type="module"
      src="../modules/modals/share-item-modal.js"
      defer
    ></script>
    <script
      type="module"
      src="/modules/modals/rename-modal.js"
      defer
    ></script>
    <script
      type="module"
      src="../modules/utilities/file-search.js"
      defer
    ></script>
    <script
      type="module"
      src="../modules/utilities/track-current-folder.js"
      defer
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.5/FileSaver.min.js"></script>
  </head>
  <body>
    <div class="main-container">
      <%- include('../partials/sidebar.ejs'); %>

      <div class="main-content">
        <div class="wrapper">
          <div class="all-files-section">
            <div class="page-header">Favourites</div>

            <input
              type="text"
              id="search-files-input"
              name="search-files"
              placeholder="Search"
            />

            <% if (uploadedFiles.length === 0 && uploadedFolders.length === 0) { %>
            <div class="empty-text-header">No favourites have been added</div>
            <div class="empty-text">
              Any files or folders you favourite will appear here.
            </div>
            <% } %>

            <%- include('../partials/uploaded-folders.ejs'); %>
            <%- include('../partials/uploaded-files.ejs'); %>
          </div>
        </div>

        <%- include('../partials/share-folder-modal.ejs'); %>
        <%- include('../partials/share-file-modal.ejs'); %>
        <%- include('../partials/rename-modal.ejs'); %>
      </div>
    </div>
  </body>
</html>
