<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shared files - Filebase</title>
    <link rel="stylesheet" href="../styles/home.css" />
    <link rel="stylesheet" href="../styles/modal.css" />
    <link rel="icon" type="image/png" href="../assets/images/favicon.png" />
    <script
      type="module"
      src="../modules/modals/share-item-modal.js"
      defer
    ></script>
    <script
      type="module"
      src="../modules/utilities/file-search.js"
      defer
    ></script>
    <script
      type="module"
      src="../modules/utilities/track-current-folder.js"
      defer
    ></script>
    <script
      type="module"
      src="/modules/utilities/track-root-folder.js"
      defer
    ></script>
  </head>
  <body>
    <div class="main-container">
      <%- include('../partials/sidebar.ejs'); %>

      <div class="main-content">
        <div class="wrapper">
          <div class="all-files-section">
            <div class="page-header">Shared files and folders</div>

            <input
              type="text"
              id="search-files-input"
              name="search-files"
              placeholder="Search"
            />

            <% if (uploadedFiles.length === 0 && uploadedFolders.length === 0) {
            %>
            <div class="empty-text-header">
              You have not shared any files or folders yet
            </div>
            <div class="empty-text">
              Anything that you share can be found here.
            </div>
            <% } %>

            <%- include('../partials/uploaded-folders.ejs'); %>
            <%- include('../partials/uploaded-files.ejs'); %>
          </div>
        </div>

        <%- include('../partials/share-folder-modal.ejs'); %>
        <%- include('../partials/share-file-modal.ejs'); %>
      </div>
    </div>
  </body>
</html>
